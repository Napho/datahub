{
  "name": "@devinit/dh-base",
  "version": "1.0.0",
  "description": "for datahub related libs & tools",
  "main": "lib/index.js",
  "scripts": {
    "build": "NODE_ENV=production npm run build-css && cp -R static lib/ && tsc",
    "tsc": "tsc",
    "css": "lessc src/theme/less/index.less static/styles.css",
    "copy-chart-css": "cp node_modules/@devinit/charts/dist/di-charts.min.css static/",
    "build-css": "lessc  --clean-css='--s1 --advanced --compatibility=ie8' src/theme/less/index.less static/styles.min.css",
    "lint": "tslint -c tslint.json 'pages/**/*.tsx' 'src/**/*.tsx' 'src/**/*.ts'",
    "storybook": "start-storybook -s static -p 6006",
    "patch": "release-it -i patch -n",
    "feature": "release-it -i minor -n",
    "breaking": "release-it -i major -n",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "pdfs"
  ],
  "author": "epicallan.al@gmail.com",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devinit/di-pdfs.git"
  },
  "peerDependencies": {
    "glamor": "^2.20.40"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "glamorous": "^4.11.0",
    "ramda": "^0.25.0",
    "localforage": "^1.5.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "css-to-js-object": "0.0.3",
    "csso": "^3.1.1",
    "@storybook/addon-actions": "3.3.10",
    "@storybook/addon-links": "3.3.10",
    "@storybook/react": "3.3.10",
    "@types/react": "16.0.28",
    "@types/storybook__react": "3.0.6",
    "css-loader": "0.28.9",
    "usus": "^1.6.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "file-loader": "1.1.6",
    "less": "2.7.3",
    "less-plugin-clean-css": "1.5.1",
    "style-loader": "0.19.1",
    "ts-loader": "3.3.1",
    "tslint-react": "3.4.0"
  }
}
