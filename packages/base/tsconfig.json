{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "jsx": "react",
      "sourceMap": false,
      "strict": true,
      "lib": ["es2017", "dom",  "esnext.asynciterable"],
      "experimentalDecorators": true,
      "declaration": true,
      "declarationDir": "lib",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "rootDir": "src",
      "outDir": "lib",
      "removeComments": true
    },
    "exclude": [
      "node_modules",
      "lib"
    ]
  }