{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "jsx": "react",
      "outDir": "lib",
      "sourceMap": false,
      "strict": true,
      "allowJs": true,
      "lib": ["es2017", "dom"],
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true
    },
    "strictPropertyInitialization": false,
    "exclude": [
      "node_modules",
      "lib"
    ]
  }