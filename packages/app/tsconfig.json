{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "outDir": "lib",
    "skipLibCheck": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "server/**/*.ts"
  ]
}