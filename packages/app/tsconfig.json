{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "lib",
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}