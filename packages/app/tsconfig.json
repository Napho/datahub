{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".", 
    "paths": {
      "mapbox-gl": ["node_modules/mapbox-gl/dist/mapbox-gl.js"] // This mapping is relative to "baseUrl"
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "pages/**/*.ts"
  ]
}